<div class="container">
  <div class="row justify-content-md-center">
    <div class="text-center">
      <h2>サインインする</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :ユーザーネーム %><br />
          <%= f.text_field :name, autofocus: true, class: "name" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :サインイン情報を記憶する %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "サインイン", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>