<div class="container-fluid">
	<div class="row">
		<div class="col col-md-4 px-0"><%= render 'users/sidebar', user: current_user %></div>
		<div class="col col-md-8 px-0">
			<h3>Users</h3>
			<table class="table">
				<thead>
					<th></th>
					<th>User Name</th>
					<th></th>
					<th colspan="3"></th>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :image, class: "img-circle pull-left", size: "80x80", fallback: "no-image-mini.jpg" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>