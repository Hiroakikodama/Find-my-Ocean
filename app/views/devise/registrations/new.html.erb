<div class="container">
  <div class="row justify-content-md-center">
    <div class="text-center">
      <h2>新規登録する</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ユーザーネーム %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザーネーム" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード" %>
        </div>

        <br>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
        <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
